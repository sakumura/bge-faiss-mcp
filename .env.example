# BGE-FAISS MCP Configuration Example
# Copy this file to .env and modify as needed

# ====================
# Core Settings
# ====================

# Working directory for semantic search (default: current directory)
# WORKING_DIR=/path/to/your/project

# Path for storing semantic indexes (relative to WORKING_DIR)
# SEMANTIC_INDEX_PATH=.search/vectors

# Default search mode: auto, semantic, or pattern
# DEFAULT_MODE=auto

# Enable result caching for faster subsequent searches
# ENABLE_CACHE=true

# ====================
# Performance Settings
# ====================

# Enable GPU acceleration (requires faiss-gpu)
# USE_GPU=false

# Batch size for embedding generation
# EMBEDDING_BATCH_SIZE=32

# Maximum number of search results to return
# MAX_SEARCH_RESULTS=50

# ====================
# Index Settings
# ====================

# Automatically rebuild index when files change
# AUTO_REINDEX=true

# Index rebuild threshold in hours (24 = daily)
# SEMANTIC_INDEX_TTL_HOURS=24

# Minimum number of files to use IVF index (vs Flat index)
# MIN_FILES_FOR_IVF=100

# ====================
# Logging
# ====================

# Log level: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO

# Log to file (optional)
# LOG_FILE=bge_faiss_mcp.log

# ====================
# Model Settings
# ====================

# BGE-M3 model name or path (default: BAAI/bge-m3)
# BGE_MODEL_NAME=BAAI/bge-m3

# Model cache directory (optional, uses HuggingFace default if not set)
# MODEL_CACHE_DIR=./models

# Use local model files only (no downloads)
# OFFLINE_MODE=false

# ====================
# Search Behavior
# ====================

# Similarity threshold for semantic search (0.0-1.0)
# SIMILARITY_THRESHOLD=0.3

# Enable query preprocessing and normalization
# NORMALIZE_QUERIES=true

# Maximum query length (characters)
# MAX_QUERY_LENGTH=1000

# ====================
# File Processing
# ====================

# File extensions to include in indexing (comma-separated)
# INCLUDE_EXTENSIONS=.py,.js,.ts,.md,.txt,.json,.yaml,.yml

# File extensions to exclude from indexing
# EXCLUDE_EXTENSIONS=.log,.tmp,.cache

# Maximum file size to index (bytes)
# MAX_FILE_SIZE=1048576

# ====================
# Security
# ====================

# Enable/disable certain MCP operations
# ALLOW_INDEX_REBUILD=true
# ALLOW_INDEX_CLEAR=true
# ALLOW_CONFIG_CHANGE=false